---
import BaseHtml from "@/layout/base-html.astro"
import { toSectionSlugs } from "@/lib/ui/slug"
import { glob } from "glob"
import toc from "~/meta/toc.json" assert { type: "json" }

const pages = (await glob("data/**/*.json")).sort()
const sections = toSectionSlugs(pages)
---

<BaseHtml>
  <main>
    <h1>Saezuru English</h1>

    <section>
      <h2>Story</h2>
      <ul>
        {
          sections.map((section) => (
            <li>
              <a href={section.first}>{section.name}</a>
            </li>
          ))
        }
      </ul>
    </section>

    <section>
      <h2>Grammar</h2>
      <ul>
        {
          toc.map((heading) => (
            <li>
              <a href={heading.slugs.join("/") + "#" + heading.id}>{heading.title}</a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</BaseHtml>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  h1 {
    text-align: center;
    letter-spacing: 0.1em;
    font-style: italic;
    font-weight: normal;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-block: 1rem 2rem;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;
    align-items: center;
  }

  h2 {
    letter-spacing: 0.5em;
    font-weight: normal;
  }

  ul {
    padding: 0;
    margin: 0;
    max-width: 100%;
  }

  li {
    line-height: 2;
    list-style-type: none;
    letter-spacing: 0.05em;
    width: 100%;
    white-space: nowrap;
    overflow-x: auto;
  }

  a {
    text-decoration: none;
    color: inherit;
    padding-inline: 1rem;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease-in-out;
  }

  a:hover {
    border-color: currentColor;
  }
</style>
